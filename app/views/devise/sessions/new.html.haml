.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f|
    .row
      .col-md-3
      .col-md-6
        %h2 Sign in
        %hr/
    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :email, class: 'sr-only'
          .input-group.mb-2.mr-sm-2.mb-sm-0
            .input-group-addon{:style => "width: 2.6rem"}
              %i.fa.fa-at
            = f.email_field :email, autofocus: true, placeholder: 'you@example.com', class: 'form-control', type: 'text'
    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :password, class: 'sr-only'
          .input-group.mb-2.mr-sm-2.mb-sm-0
            .input-group-addon{:style => "width: 2.6rem"}
              %i.fa.fa-key
            = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'form-control'
    - if devise_mapping.rememberable?
      .row
        .col-md-3
        .col-md-6{:style => "padding-top: .35rem"}
          .form-check.mb-2.mr-sm-2.mb-sm-0
            %label.form-check-label
              %input.form-check-input{:name => "remember", :type => "checkbox"}/
              %span{:style => "padding-bottom: .15rem"} Remember me
    .row{:style => "padding-top: 1rem"}
      .col-md-3
      .col-md-6
        = f.button 'Sign in', class: 'btn btn-success'
    .row
      .col-md-3
      .col-md-6{style: 'padding-top: .35rem'}
        = render 'devise/shared/links'
